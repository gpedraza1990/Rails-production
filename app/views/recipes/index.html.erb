

<h1> Searching for - <% @search_term %> </h1>
<table border="1">
  <tr>
    <th> Thumbnail </th>	
    <th> Title </th>	
    <th> Social Rank </th>	
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
    <td>
      <%= link_to image_tag(recipe["image_url"], size: "100"), 	recipe["source_url"]  %>
    </td>
    <td><%= link_to recipe["title"], recipe["source_url"]%></td>
    <%= sanitize('<td>#{recipe["social_rank"]}</td>', tags: %w(td)) %>
    
  </tr>
  <% end %>
</table>
