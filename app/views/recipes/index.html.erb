

<h1> Searching for - <% @search_term %> </h1>
<table border="1">
  <tr>
    <th> Thumbnail </th>	
    <th> Title </th>	
    <th> Social Rank </th>	
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
    <td>
      <%= link_to image_tag(recipe["image_url"], size: "100"), 	recipe["source_url"]  %>
    </td>
<% link=link_to recipe['title'], recipe['source_url'] %>
     <%= sanitize("<td>#{link} </td>", tags: %w(td,a)) %>
    <td><%= recipe["social_rank"]  %></td>
  </tr>
  <% end %>
</table>
