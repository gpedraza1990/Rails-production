

<h1> Searching for - <% @search_term %> </h1>
<table border="1">
  <tr>
    <th> Thumbnail </th>	
    <th> Title </th>	
    <th> Social Rank </th>	
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
    <td>
      <%= link_to  href: recipe["source_url"] do %>
      <%= image_tag(recipe["image_url"], size: "100") %>
      <% end %>
    </td>
    <td><%= recipe["title"]%></td>
    <td><%= recipe["social_rank"]%></td>
  </tr>
  <% end %>
</table>
